<?xml version="1.0" encoding="UTF-8"?>
<project name="module_moviesitedecoder" default="compile.module.moviesitedecoder">
  <dirname property="module.moviesitedecoder.basedir" file="${ant.file.module_moviesitedecoder}"/>
  
  <property name="module.jdk.home.moviesitedecoder" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.moviesitedecoder" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.moviesitedecoder" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.moviesitedecoder" value="-encoding UTF-8 -source 10 -target 10 ${compiler.args}"/>
  
  <property name="moviesitedecoder.output.dir" value="${module.moviesitedecoder.basedir}/out/production/MovieSiteDecoder"/>
  <property name="moviesitedecoder.testoutput.dir" value="${module.moviesitedecoder.basedir}/out/test/MovieSiteDecoder"/>
  
  <path id="moviesitedecoder.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="moviesitedecoder.module.production.classpath">
    <path refid="${module.jdk.classpath.moviesitedecoder}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
    <path refid="library.org.jsoup:jsoup:1.11.3.classpath"/>
    <path refid="library.com.google.code.gson:gson:2.8.5.classpath"/>
  </path>
  
  <path id="moviesitedecoder.runtime.production.module.classpath">
    <pathelement location="${moviesitedecoder.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
    <path refid="library.org.jsoup:jsoup:1.11.3.classpath"/>
    <path refid="library.com.google.code.gson:gson:2.8.5.classpath"/>
  </path>
  
  <path id="moviesitedecoder.module.classpath">
    <path refid="${module.jdk.classpath.moviesitedecoder}"/>
    <pathelement location="${moviesitedecoder.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
    <path refid="library.org.jsoup:jsoup:1.11.3.classpath"/>
    <path refid="library.com.google.code.gson:gson:2.8.5.classpath"/>
  </path>
  
  <path id="moviesitedecoder.runtime.module.classpath">
    <pathelement location="${moviesitedecoder.testoutput.dir}"/>
    <pathelement location="${moviesitedecoder.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
    <path refid="library.org.jsoup:jsoup:1.11.3.classpath"/>
    <path refid="library.com.google.code.gson:gson:2.8.5.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.moviesitedecoder">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.moviesitedecoder">
    <patternset refid="excluded.from.module.moviesitedecoder"/>
  </patternset>
  
  <path id="moviesitedecoder.module.sourcepath">
    <dirset dir="${module.moviesitedecoder.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.moviesitedecoder" depends="compile.module.moviesitedecoder.production,compile.module.moviesitedecoder.tests" description="Compile module MovieSiteDecoder"/>
  
  <target name="compile.module.moviesitedecoder.production" depends="register.custom.compilers" description="Compile module MovieSiteDecoder; production classes">
    <mkdir dir="${moviesitedecoder.output.dir}"/>
    <javac2 destdir="${moviesitedecoder.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.moviesitedecoder}/javac">
      <compilerarg line="${compiler.args.moviesitedecoder}"/>
      <bootclasspath refid="moviesitedecoder.module.bootclasspath"/>
      <classpath refid="moviesitedecoder.module.production.classpath"/>
      <src refid="moviesitedecoder.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.moviesitedecoder"/>
    </javac2>
    
    <copy todir="${moviesitedecoder.output.dir}">
      <fileset dir="${module.moviesitedecoder.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.moviesitedecoder.tests" depends="register.custom.compilers,compile.module.moviesitedecoder.production" description="compile module MovieSiteDecoder; test classes" unless="skip.tests"/>
  
  <target name="clean.module.moviesitedecoder" description="cleanup module">
    <delete dir="${moviesitedecoder.output.dir}"/>
    <delete dir="${moviesitedecoder.testoutput.dir}"/>
  </target>
</project>